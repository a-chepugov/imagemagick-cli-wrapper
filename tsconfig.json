{
	"compileOnSave": true,
	"compilerOptions": {
		"rootDir": "source",
		"outDir": "typings",
		"module": "commonjs",
		"target": "ESNext",
		"allowJs": true,
		"checkJs": true,
		"declaration": true,
		"emitDeclarationOnly": true,
		"alwaysStrict": true,
		"noImplicitAny": true,
		"removeComments": false,
		"stripInternal": true,
		"sourceMap": true,
		"noErrorTruncation": true,
		"pretty": true
	},
	"files": [
		"./source/index.js"
	],
	"exclude": [
		"./*.js",
		"./*.ts",
		"build",
		"docs",
		"node_modules",
		"**/*.test.ts"
	]
}
